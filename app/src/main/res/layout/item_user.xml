<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:elevation="@dimen/size_4dp"
    android:layout_marginHorizontal="@dimen/size_16dp"
    android:layout_marginBottom="@dimen/size_16dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txvUsername"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/green_10"
            android:textSize="@dimen/size_text_18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Leanne Graham" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txvPhone"
            style="@style/TextBlack14"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_call_24"
            android:drawablePadding="@dimen/size_8dp"
            android:layout_marginTop="@dimen/size_8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txvUsername"
            tools:text="1-770-736-8031 x56442" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txvEmail"
            style="@style/TextBlack14"
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_email_24"
            android:drawablePadding="@dimen/size_8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txvPhone"
            tools:text="Sincere@april.biz" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txvShowPosts"
            style="@style/TextBlack14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green_10"
            android:textSize="@dimen/size_text_18sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/size_16dp"
            android:layout_marginTop="@dimen/size_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txvEmail"
            android:text="@string/title_show_posts" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>